package sec1;
//쓰레드(Thread) : 
public class ThreadEx1 {
	public static void main(String[] args) {
		Thread th1 = new Thread(new ThreadWithRunable()); //ThreadWithRunable(인터페이스) 상속 받아 오버라이딩 = 추상화
		ThreadWithClass th2 = new ThreadWithClass //Thread(클래스)로부터 상속 받아 오버라이딩 
	}

}
class ThreadWithClass extends Thread {
	public void run(){
		for(int i=0;i<5;i++){
		System.out.println(this.getName()); //메소드
		try {
			Thread.sleep(10);
		} catch (InterruptedException e) {
			e.printStackTrace();
		} //10->0.01초 mmseconde (밀리세컨드)단위
		}
	}
}
